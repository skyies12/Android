<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity" >

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:focusable="true"
        android:text="TextView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="vertical">

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/editbox_default"
            android:onClick="onKeydownClicked"
            android:text=" 키보드 내리기"
            android:textAlignment="center" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/idLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/textView2"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="아이디"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/ideditText"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/editbox_motion"
            android:ems="10"
            android:hint="최대 8자리"
            android:inputType="textEmailAddress"
            android:maxLength="8"
            android:textColor="#365293"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/pwLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/pwtext"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:text="비밀번호"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/pwedit-text"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_weight="0"
            android:background="@drawable/editbox_motion"
            android:ems="10"
            android:hint="최대 8자리"
            android:inputType="textPassword"
            android:maxLength="8"
            android:textColor="#365293"
            android:textSize="14sp" />
        <requestFocus/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/yearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/yeartext"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:maxLength="4"
            android:text="연도"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/yearedittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/editbox_motion"
            android:ems="10"
            android:inputType="number"
            android:maxLength="4"
            android:textColor="#365293" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/monthLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/monthtext"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:text="월"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/monthedittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/editbox_motion"
            android:ems="10"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#365293" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/dayLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/daytext"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:maxLength="2"
            android:text="일"
            android:textAlignment="center" />

        <EditText
            android:id="@+id/dayedittext"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:background="@drawable/editbox_motion"
            android:ems="10"
            android:inputType="number"
            android:maxLength="2"
            android:textColor="#365293" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/button2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:background="@drawable/editbox_default"
            android:onClick="onLoginClicked"
            android:text="로그인" />
    </LinearLayout>

</LinearLayout>